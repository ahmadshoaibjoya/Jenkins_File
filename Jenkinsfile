pipeline {

// This build will be runned in any available Jenkins agent
    agent any

    stages {


        stage("build"){

            steps {
                echo "Hello World"
                echo "Building the Application"
            }

        }

        stage("test"){

            steps {
                echo "Testing the Application"
            }

        }

        stage("deploy"){

            steps {
                echo "Deploying the Application."
            }

        }


    }



}